<div class = "container">
  <h1 class = "edit-top">Editing Book</h1>
  
    <% if @book.errors.any? %>
    <div class = "error">
      <h5>
        <%= @book.errors.count %> errors prohibited this book from being saved:
      </h5>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div> 
    <% end %>
  
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="edit-form">
        <%= form_with model: @book, local:true do |f| %>
        <h5>Title</h5>
        <%= f.text_field :title, class: "edit-text-field" %>
        <h5>Opinion</h5>
        <%= f.text_area :body, class: "edit-text-field" %>
        <p><%= f.submit ' Update Book ', class: "btn btn-primary edit-text-field" %></p>
        <% end %>
      </div>
      <div class = "edit-link">
        <%= link_to "Show", book_path(@book.id), :style => "color: gray" %> |
        <%= link_to "Back", books_path, :style => "color: gray" %>
      </div> 
    </div>
  </div>
  
  
  
  
</div>