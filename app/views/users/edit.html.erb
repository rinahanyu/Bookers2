<div class="container">

<h2>User info</h2>

   <% if @user.errors.any? %>
    <div class = "error">
      <h5>
        <%= @user.errors.count %> errors prohibited this obj from being saved:
      </h5>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div> 
  <% end %>

<%= form_with model: @user, local:true do |f| %>
<div class="user-edit-headline">
  <span>Name</span>
  <%= f.text_field :name, autofocus: true %>
 </div>

<div class="user-edit-headline">
  <p>Image</p>
  <%= f.attachment_field :profile_image %>
</div>
 
<div class="user-edit-headline">
  <span>Introduction</span>
  <%= f.text_area :introduction, autofocus: true %>
</div>
  
  <p><%= f.submit " Update User " %></p>
<% end %>

</div>


