<div class="container">
  <div class="row">
    


  <div class="col-lg-4">
    <h1>User info</h1>
    
    <h1>New book</h1>
  　<%= form_with model: @book, url:'/books', local:true do |f| %>
      <h5>Title</h5>
        <%= f.text_field :title %>
      <h5>Opinion</h5>
        <%= f.text_area :body %>
      <p><%= f.submit ' Create Book ' %></p>
    <% end %>
  </div>
  
  <div class="col-lg-8">
    <h1>Books</h1>
      <table>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      
      <% if @books.present? %>
      <% @books.each do |book| %>
        <tr>
          <td>画像</td>
          <td><%= link_to "#{book.title}", book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      <% end %>
      
    </table>
  </div>


  </div>
</div>




